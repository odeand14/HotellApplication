<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.westerdals.odeand.hotellapplication.MainFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="no.westerdals.odeand.hotellapplication.MainActivity"
        tools:showIn="@layout/app_bar_main"
        >


        <TextView
            android:id="@+id/mainpage_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hotell_taxi"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:textSize="30sp"
            />


        <ImageView
            android:id="@+id/taxi_image_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/taxi_image"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/taxi_image_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/taxi_image"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/room_number"
            android:id="@+id/txtRoomNumber"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/taxi_image_top"
            android:textAlignment="center"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmitRoomNumber"
            android:layout_centerHorizontal="true"
            android:layout_margin="50sp"
            android:layout_below="@+id/txtRoomNumber"
            android:text="@string/book_button"
            />

    </RelativeLayout>

</FrameLayout>
